<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/9" fx:controller="sample.controllers.ReceiverController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-Infinity" minHeight="20.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-Infinity" minHeight="20.0" prefHeight="25.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="-Infinity" minHeight="60.0" prefHeight="80.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Введите почтовый сервер" GridPane.halignment="CENTER" />
      <TextField fx:id="serverID" GridPane.columnIndex="1" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Введите логин" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
      <TextField fx:id="loginID" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Введите пароль" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
      <PasswordField fx:id="passID" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Список сообщений" GridPane.rowIndex="3" />
      <Button fx:id="getMessages" mnemonicParsing="false" onAction="#onReceiveMessagesButton" text="Получить сообщения" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
      <Button fx:id="menuButton" mnemonicParsing="false" onAction="#onMenuButton" text="В меню" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <ListView fx:id="messageListID" editable="true" prefHeight="200.0" prefWidth="200.0" visible="false" GridPane.rowIndex="4" />
      <Button mnemonicParsing="false" onAction="#onDeleteActiveMessage" text="Удалить выбранное сообщение" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
      <Button mnemonicParsing="false" onAction="#onDisconnectButton" text="Отключиться" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
      <Button mnemonicParsing="false" onAction="#onOpenMessage" text="Открыть сообщение" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
      <TextArea fx:id="fullMessageID" prefHeight="200.0" prefWidth="200.0" visible="false" GridPane.rowIndex="5" />
   </children>
